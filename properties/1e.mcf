forall tube:Tube.(
    nu X(isSlow : Bool = false, isFire : Bool = false).(
        [report_state(tube, slow)]X(true, isFire) &&
        [report_state(tube, fire)]X(isSlow, true) &&
        [report_state(tube, norm)]X(false, false) &&
        (val(!isSlow && !isFire) =>
		([(!(report_state(tube, slow) || report_state(tube, fire) || report_state(tube, norm) || set_escape_route_light(tube, on)))*.
            set_escape_route_light(tube, on)]false))
    )
)

